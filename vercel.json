{
    "version": 2,
    "buildCommand": "npm run build",
    "outputDirectory": "client/build",
    "installCommand": "npm install && cd client && npm install && cd ../server && npm install",
    "functions": {
        "api/**/*.js": {
            "memory": 1024,
            "maxDuration": 10
        }
    },
    "rewrites": [
        {
            "source": "/api/(.*)",
            "destination": "/api/index.js"
        }
    ]
}